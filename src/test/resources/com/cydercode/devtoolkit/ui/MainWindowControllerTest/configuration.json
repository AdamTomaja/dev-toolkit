{
  "applications": {
    "Maven": {
      "path": "mvn"
    },
    "Git": {
      "path": "git"
    }
  },

  "parameters": {
    "project-dir": {
      "type": "string",
      "default": "/home/mint/work/git/dev-toolkit/",
      "values": ["/home/mint/work/git/dev-toolkit/", "/home/mint/work/git/project-2/", "/home/mint/work/git/project-3"],
      "group": "Maven"
    },
    "repo-dir": {
      "type": "string",
      "default": "/home/mint/work/git/dev-toolkit/",
      "group": "Git"
    },
    "branch": {
      "type": "string",
      "default": "master",
      "group": "Git"
    }
  },

  "presets": {
    "Clean": {
      "application": "Maven",
      "cmd": "-f ${project-dir} clean",
      "group": "Maven"
    },
    "Install": {
      "application": "Maven",
      "cmd": "-f ${project-dir} install",
      "group": "Maven"
    },
    "Package": {
      "application": "Maven",
      "cmd": "-f ${project-dir} package",
      "group": "Maven"
    },
    "Test": {
      "application": "Maven",
      "cmd": "-f ${project-dir} test",
      "group": "Maven"
    },
    "Deploy": {
      "application": "Maven",
      "cmd": "-f ${project-dir} deploy",
      "group": "Maven"
    },
    "Pull": {
      "application": "Git",
      "cmd": "-C ${repo-dir} pull",
      "group": "Git"
    },
    "Push": {
      "application": "Git",
      "cmd": "-C ${repo-dir} push",
      "group": "Git"
    },
    "Show remotes": {
      "application": "Git",
      "cmd": "-C ${repo-dir}  remote -v",
      "group": "Git"
    },
    "Checkout": {
      "application": "Git",
      "cmd": "-C ${repo-dir}  checkout ${branch}",
      "group": "Git"
    },
    "Status": {
      "application": "Git",
      "cmd": "-C ${repo-dir} status",
      "group": "Git"
    }
  }
}