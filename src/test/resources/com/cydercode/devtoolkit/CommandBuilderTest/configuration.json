{
  "applications": {
    "Maven": {
      "path": "${maven-path}/mvn"
    }
  },
  "parameters": {
    "distribution": {
      "type": "string",
      "default": "C",
      "values": [
        "A",
        "B",
        "C"
      ]
    },
    "profile": {
      "type": "string",
      "default": "local",
      "values": [
        "dev",
        "local",
        "test"
      ]
    }
  },
  "presets": {
    "build": {
      "application": "Maven",
      "cmd": "clean install -d ${distribution} -p ${profile}"
    },
    "clean": {
      "application": "Maven",
      "cmd": "clean"
    }
  }
}