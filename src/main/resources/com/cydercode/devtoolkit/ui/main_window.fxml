<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cydercode.devtoolkit.ui.MainWindowController">
    <top>
        <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <items>
                <Button fx:id="loadConfigurationButton" mnemonicParsing="false" onAction="#openLoadConfigurationDialog" text="Load configuration" />
            </items>
        </ToolBar>
    </top>
    <center>
        <VBox spacing="5.0" BorderPane.alignment="CENTER">
            <children>
            <Label text="Parameters" />
                <VBox fx:id="parametersBox" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </VBox>
                <Label text="Presets" />
                <VBox fx:id="presetsBox" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </VBox>
                <Label text="Runs" />
                <TabPane fx:id="runTabs" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="ALL_TABS">
                </TabPane>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </VBox>
    </center>
</BorderPane>
