{
  "applications": {
    "Maven": {
      "path": "mvn"
    }
  },
  "parameters": {
    "project-home": {
      "type": "string",
      "default": "/home/mint/work/git/dev-toolkit/"
    },
    "distribution": {
      "type": "string",
      "default": "C",
      "values": [
        "A",
        "B",
        "C"
      ]
    },
    "profile": {
      "type": "string",
      "default": "local",
      "values": [
        "dev",
        "local",
        "test"
      ]
    },
    "hidden-parameter": {
      "type": "string",
      "hidden": "true",
      "default": "hello"
    }
  },
  "presets": {
    "build": {
      "application": "Maven",
      "cmd": "-f ${project-home} clean install"
    },
    "clean": {
      "application": "Maven",
      "cmd": "-f ${project-home} clean"
    },
    "preset-with-hidden-parameter": {
      "application": "Maven",
      "cmd":"-f ${project-home} -D${hidden-parameter}"
    }
  }
}