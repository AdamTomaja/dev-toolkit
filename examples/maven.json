{
  "applications": {
    "Maven": {
      "path": "mvn"
    }
  },

  "parameters": {
    "project-dir": {
      "type": "string",
      "default": "/home/mint/work/git/dev-toolkit/",
      "values": ["/home/mint/work/git/dev-toolkit/", "/home/mint/work/git/project-2/", "/home/mint/work/git/project-3"]
    }
  },

  "presets": {
    "Clean": {
      "application": "Maven",
      "cmd": "-f ${project-dir} clean"
    },
    "Install": {
      "application": "Maven",
      "cmd": "-f ${project-dir} install"
    },
    "Package": {
      "application": "Maven",
      "cmd": "-f ${project-dir} package"
    },
    "Test": {
      "application": "Maven",
      "cmd": "-f ${project-dir} test"
    },
    "Deploy": {
      "application": "Maven",
      "cmd": "-f ${project-dir} deploy"
    }
  }
}